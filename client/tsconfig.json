{
  "compilerOptions": {
    "outDir": "../dist/client",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "vue-tsx-support/enable-check",
      "vue-tsx-support/options/enable-vue-router"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "../typings"
  ]
}
