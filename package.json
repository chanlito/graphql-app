{
  "name": "graphql-app",
  "author": "Chanlito Hem <chanlitohem@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:client build:server",
    "build:client": "nuxt build",
    "build:server": "tsc",
    "dev": "npm-run-all --parallel nodemon playground",
    "nodemon": "nodemon",
    "playground": "graphql playground --server-only",
    "generate-types": "gql-gen",
    "prestart": "npm run build",
    "start": "node -r ts-node/register/transpile-only dist/main.js",
    "test": "jest --setupFiles dotenv/config"
  },
  "dependencies": {
    "@graphql-modules/core": "^0.2.18",
    "@nuxtjs/apollo": "^4.0.0-rc2.3",
    "@nuxtjs/style-resources": "^0.1.1",
    "apollo-server-express": "^2.3.1",
    "cookie-universal": "^2.0.11",
    "cookie-universal-nuxt": "^2.0.11",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.0",
    "graphql-tools": "^4.0.3",
    "lodash": "^4.17.11",
    "nuxt-edge": "^2.4.0-25759244.498c4f11",
    "prisma-binding": "^2.2.8",
    "prisma-client-lib": "^1.21.1",
    "reflect-metadata": "^0.1.12",
    "vee-validate": "^2.1.4",
    "vuetify": "^1.3.15"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "apollo-server-testing": "^2.3.1",
    "dotenv": "^6.1.0",
    "eslint": "^5.11.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "graphql-cli": "^3.0.3",
    "graphql-code-generator": "^0.15.1",
    "graphql-codegen-typescript-common": "^0.15.1",
    "graphql-codegen-typescript-resolvers": "^0.15.1",
    "graphql-codegen-typescript-server": "^0.15.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.21.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2",
    "vuetify-loader": "^1.0.8"
  },
  "eslintConfig": {
    "extends": [
      "plugin:vue/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "parser": "typescript-eslint-parser",
      "sourceType": "module"
    },
    "plugins": [
      "typescript"
    ],
    "rules": {
      "vue/component-name-in-template-casing": "off",
      "vue/max-attributes-per-line": "off"
    }
  },
  "nodemonConfig": {
    "exec": "ts-node -r dotenv/config --files -P server/tsconfig.json server/main.ts",
    "ext": "js, ts, graphql",
    "watch": [
      "server",
      "nuxt.config.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
