{
  "name": "graphql-app",
  "author": "Chanlito Hem <chanlitohem@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "tsc",
    "dev": "npm-run-all --parallel nodemon playground",
    "nodemon": "nodemon",
    "playground": "graphql playground --server-only",
    "generate-types": "gql-gen",
    "prestart": "yarn build",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/main.js",
    "vanilla": "npx nodemon --exec ts-node ./src/main-vanilla-apollo.ts --ext ts"
  },
  "dependencies": {
    "@graphql-modules/core": "^0.2.18",
    "apollo-server-express": "^2.3.1",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.0",
    "graphql-tools": "^4.0.3",
    "prisma-binding": "^2.2.8",
    "prisma-client-lib": "^1.21.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.3",
    "dotenv": "^6.1.0",
    "graphql-cli": "^3.0.3",
    "graphql-code-generator": "^0.15.1",
    "graphql-codegen-typescript-common": "^0.15.1",
    "graphql-codegen-typescript-resolvers": "^0.15.1",
    "graphql-codegen-typescript-server": "^0.15.1",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.21.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.2.1"
  },
  "nodemonConfig": {
    "exec": "ts-node -r dotenv/config -r tsconfig-paths/register src/main.ts",
    "ext": "ts, graphql",
    "watch": [
      "src"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
